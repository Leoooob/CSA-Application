<!DOCTYPE html>
<html>
<head>
  <title>CSA Application</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--<link rel="stylesheet" type="text/css" href="override.css">-->
</head>
<body id="<%= params[:controller].parameterize %>_controller">

<div class="header">
  <%= render :partial => 'sessions/login' %>
  <div class="navigation">
    <%= render_navigation %>
  </div>

  <% flash.each do |key, value| %>
        <span class="flash_<%= key %>">
          <span class="flash_message"><%= value %></span>
        </span>
  <% end %>

</div>

<div class="container flex">
  <div class="content">
    <%= yield %>
  </div>

  <div class="side-pane">
    <h2>Live Broadcast feed</h2>
    <div id="messages">
      <% if @broadcasts.length > 0 %>
        <% @broadcasts.first(20).each do |broadcast| %>
          <!-- <p><strong>Broadcast</strong>: BROADCAST.content <br/> @ BROADCAST.time-->
        <p>
          <strong>Broadcast</strong>: <%= broadcast.content %> <br/> @ <%= broadcast.created_at %>
        </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div id="footer">
</div>

</body>
</html>
